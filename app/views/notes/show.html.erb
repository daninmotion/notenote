<div class="wrapper_with_padding">
	<div id="note_show">
		<h1><%= @note.title %></h1>
		<p><%= @note.content %></h1>

		<div class="buttons">
			<%= link_to "Edit", edit_note_path(@note), class: "button" %>
			<%= link_to "Delete", note_path(@note), method: :delete, data: { confirm: "Are you sure?" }, class: "button" %>
		</div>
	</div>
</div>